%h2
  Subscribe to our mailing list
  %a{name: "signup"}
%p
  / Begin MailChimp Signup Form
  %link{href: "//cdn-images.mailchimp.com/embedcode/classic-081711.css", rel: "stylesheet", type: "text/css"}/
  #mc_embed_signup
    %form#mc-embedded-subscribe-form.validate{action: "http://ospa.us8.list-manage1.com/subscribe/post?u=e4db9f1ed9292e6578c668d88&id=6fe0c5485e", method: "post", name: "mc-embedded-subscribe-form", novalidate: "", target: "_blank"}
      .indicates-required
        %span.asterisk *
        required
      .mc-field-group
        %input#mce-EMAIL.required.email.form-control{placeholder: "Email Address *", name: "EMAIL", type: "email", value: ""}/
        %br
      .mc-field-group
        %input#mce-FNAME.form-control{placeholder: "First Name", name: "FNAME", type: "text", value: ""}/
        %br
      .mc-field-group
        %input#mce-LNAME.form-control{placeholder: "Last Name", name: "LNAME", type: "text", value: ""}/
        %br
      #mce-responses.clear
        #mce-error-response.response{style: "display:none"}
        #mce-success-response.response{style: "display:none"}
        / real people should not fill this in and expect good things - do not remove this or risk form bot signups
        %div{style: "position: absolute; left: -5000px;"}
          %input{name: "b_e4db9f1ed9292e6578c668d88_6fe0c5485e", type: "text", value: ""}/
      %input#mc-embedded-subscribe{class: "btn btn-default",name: "subscribe", type: "submit", value: "Subscribe"}/
  / End mc_embed_signup
%script{:type => "text/javascript", :src => "#{javascript_path('mailchimp')}" }
